{
    "private": true,
    "scripts": {
        "build-css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css",
        "watch-css": "tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --watch",
        "build-js": "esbuild resources/js/app.js --bundle --outfile=public/js/app.js",
        "watch-js": "esbuild resources/js/app.js --bundle --outfile=public/js/app.js --watch",
        "build": "npm run build-css && npm run build-js",
        "dev": "concurrently \"npm run watch-css\" \"npm run watch-js\""
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "esbuild": "^0.19.11",
        "tailwindcss": "^3.4.0"
    },
    "dependencies": {
        "alpinejs": "^3.14.8"
    }
}
